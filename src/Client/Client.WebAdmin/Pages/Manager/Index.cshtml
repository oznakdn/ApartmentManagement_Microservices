@page "/manager/index"
@model Client.WebAdmin.Pages.Manager.IndexModel


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="row justify-content-center d-flex my-2">
    <div class="display-6 text-center">MANAGER</div>
</div>


<div class="row d-flex justify-content-end">
    <div class="col-3 text-end">

        <button type="button" class="btn btn-primary my-3" data-bs-toggle="modal" data-bs-target="#createManagerModal">
            <i class="fa-solid fa-plus"></i> Manager
        </button>

        <!-- Modal Manager -->
        <div class="modal fade" id="createManagerModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Creating Manager</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post">
                            @*<div class="form-group text-start">
                                <label class="form-label">Site</label>
                                <select asp-for="CreateManager.SiteId" asp-items="Model.SiteList" class="form-select form-select-sm">
                                    <option value="">Select...</option>
                                </select>
                            </div>*@
                            <div class="form-group text-start">
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control" asp-for="CreateManager.FirstName" />
                            </div>
                            <div class="form-group text-start">
                                <label class="form-label">Surname</label>
                                <input type="text" class="form-control" asp-for="CreateManager.LastName" />
                            </div>
                            <div class="form-group text-start">
                                <label class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" asp-for="CreateManager.PhoneNumber" />
                            </div>
                            <div class="form-group text-start">
                                <label class="form-label">Email</label>
                                <input type="tel" class="form-control" asp-for="CreateManager.Email" />
                            </div>
                            <div class="form-group text-start">
                                <label class="form-label">Address</label>
                                <textarea asp-for="CreateManager.Address" class="form-control" rows="4"></textarea>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content-body">
    <div id="history">
        <div class="history-table-th d-none d-md-block">
            <div class="col-12 text-center">
                <div class="row px-1">
                    <div class="col py-1">
                        <p class="mb-0">Site</p>
                    </div>
                    <div class="col py-1">
                        <p class="mb-0">First Name</p>
                    </div>
                    <div class="col py-1">
                        <p class="mb-0">Last Name</p>
                    </div>
                    <div class="col py-1">
                        <p class="mb-0">Phone</p>
                    </div>
                    <div class="col py-1">
                        <p class="mb-0">Email</p>
                    </div>
                    <div class="col py-1">
                        <p class="mb-0">Address</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="history-table-tbody">
            @foreach (var manager in Model.Managers)
            {
                <section class="card pull-up">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="col-12 text-center">
                                <div class="row">
                                    <div class="col py-1">
                                        @if (string.IsNullOrWhiteSpace(manager.SiteId))
                                        {
                                            <a asp-page="/Site/Index" asp-route-managerId="@manager.Id" class="btn btn-amber btn-sm">Assign Site</a>
                                        }
                                        else
                                        {
                                            <a asp-page="/Apartment/SiteById" asp-route-siteId="@manager.SiteId" class="btn btn-blue btn-sm">Show Site</a>
                                        }
                                    </div>
                                    <div class="col py-1">
                                        <p class="mb-0"><span class="d-inline-block d-md-none text-bold-700">Name: </span> @manager.FirstName</p>
                                    </div>
                                    <div class="col py-1">
                                        <p class="mb-0"><span class="d-inline-block d-md-none text-bold-700">Name: </span> @manager.LastName</p>
                                    </div>
                                    <div class="col py-1">
                                        <p class="mb-0"><span class="d-inline-block d-md-none text-bold-700">Phone: </span> @manager.PhoneNumber</p>
                                    </div>
                                    <div class="col py-1">
                                        <p class="mb-0"><span class="d-inline-block d-md-none text-bold-700">Email: </span> @manager.Email</p>
                                    </div>
                                    <div class="col py-1">
                                        <p class="mb-0"><span class="d-inline-block d-md-none text-bold-700">Address: </span> @manager.Address</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            }
        </div>
    </div>
</div>


@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
}