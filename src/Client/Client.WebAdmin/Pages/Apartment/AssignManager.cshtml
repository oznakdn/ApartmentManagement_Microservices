@page "/apartment/assignmanager"
@model Client.WebAdmin.Pages.Apartment.AssignManagerModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="row d-flex justify-content-center">
    <div class="card">
        <div class="card-header">Assigning Manager</div>
        <div class="card-body">
            <form method="post">
                <input asp-for="AssignManager.SiteId" type="hidden" />
                <div class="form-group text-start">
                    <label class="form-label">Manager</label>
                    <select asp-for="AssignManager.UserId" asp-items="Model.ManagerList" class="form-select form-select-sm">
                        <option value="">Select...</option>
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-sm">Save</button>
                    <a class="btn btn-warning btn-sm" asp-page="/Apartment/Index">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
}